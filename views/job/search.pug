extends ../layout.pug

block content
  h1= search
  .container.mt-5
    form(action="/job/search" method="get" onsubmit="return submitForm()")
      input(type='text' id='id' placeholder='Search...')
      button(type='submit') Search
    
    if items.length > 0
      h2 Results for "#{searchTerm}"
      ul
        each item in items
          li= item.jobId + '| ' + item.jobTitle + '| ' + item.requirements
            a(href=`/jobseeker/company/${item.companyId}/${item.jobId}`)   job detail
            

      if page > 1
        a(href=`/job/search/${page - 1}/${searchTerm}`) Previous
      if page < 99
        a(href=`/job/search/${page + 1}/${searchTerm}`) Next
    else
      p No results found.

    script.
      function submitForm() {
      const id = document.getElementById('id').value;
      let page;
      if (document.getElementById('page') != null) {
        page = document.getElementById('page').value;
      } else {
        page = 1;
      }
      console.log(id, page)
      if (page == '') {
          page = 1;
        }

      window.location.href = `/job/search/${page}/${id}`;
      return false; // Prevent the default form submission
      }
